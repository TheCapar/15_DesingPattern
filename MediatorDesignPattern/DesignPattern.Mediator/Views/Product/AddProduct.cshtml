@model DesignPattern.Mediator.MediatorPattern.Commands.CreateProductCommand
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">

    <form method="post">
        <label>Product Name</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Product Stock</label>
        <input type="text" asp-for="ProductStock" class="form-control" />
        <br />
        <label>Product Type</label>
        <input type="text" asp-for="ProduckStockType" class="form-control" />
        <br />
        <label>Category</label>
        <input type="text" asp-for="ProductCategory" class="form-control" />
        <br />
        <label>Product Price</label>
        <input type="text" asp-for="ProductPrice" class="form-control" />
        <br />
        <button class="btn btn-outline-primary">Add</button>
    </form>
</div>
